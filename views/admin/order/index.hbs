{{#section 'title'}}
<h3>Quản lý đơn hàng</h3>
{{/section}}
<table class="table table-hover table-bordered table-striped" id="table_product">
	<thead>
		<tr>
			<th class="td_center">Mã đơn hàng</th>
			<th class="td_center">Ngày đặt hàng</th>
			<th class="td_center">Mã người dùng</th>
			<th class="td_center">Tổng tiền</th>
			<th class="td_center">Tình trạng đơn hàng</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		{{#each orders}}
		<tr class="{{Class}}">
			<td class="td_center td_bold">{{OrderID}}</td>
			<td class="td_center">{{OrderDate}}</td>
			<td class="td_center">{{UserID}}</td>
			<td class="td_center">{{number_format Total}}</td>
			<td class="td_center">{{State}}</td>
			<td class="td_center">
				<a class="btn btn-warning btn-sm" href="/admin/order/edit?id={{OrderID}}" role="button">
					<span class="glyphicon glyphicon-edit"></span>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>