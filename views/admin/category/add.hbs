{{#section 'title'}}
	<h3>Thêm danh mục</h3>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/css/admin.css">
{{/section}}
<form action="" method="POST" style="margin: 30px">
	<div class="row">
		<div class="col-lg-6">
			<div class="head-box-title">Tên danh mục</div>
			<input name="CatName" type="text" class="form-control box" placeholder="Nhập tên danh mục" required>
			<div class="row">
				<div class="col-lg-6">
					<button class="btn btn-success btn-edit-cat" type="submit">
					<span class="glyphicon glyphicon-edit"></span> Thêm danh mục
					</button>
				</div>
				<div class="col-lg-6">
					<button type="button" onclick="$(location).attr('href', '/admin/category/index')" class="btn btn-danger btn-edit-cat">
					<span class="glyphicon glyphicon-list"></span> Quay lại
					</button>
				</div>
			</div>
		</div>
	</div>
</form>