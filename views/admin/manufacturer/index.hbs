{{#section 'title'}}
	<h3>Quản lý nhà sản xuất</h3>
	<a class="btn btn-primary" href="/admin/manufacturer/add" role="button">
		<span class="glyphicon glyphicon-plus"></span> Thêm nhà sản xuất
	</a>
{{/section}}

<table class="table table-hover table-bordered table-striped" id="table_product">
	<thead>
		<tr>
			<th class="td_center">Mã nhà sản xuất</th>
			<th class="td_center">Tên nhà sản xuất</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>
		{{#each manufacturers}}
		<tr>
			<td class="td_center td_bold">{{ManID}}</td>
			<td class="td_center">{{ManName}}</td>
			<td class="td_center">
				<a class="btn btn-warning btn-sm" href="/admin/manufacturer/edit?id={{ManID}}" role="button">
					<span class="glyphicon glyphicon-edit"></span>	
				</a>
				<a class="btn btn-danger btn-sm" href="/admin/manufacturer/delete?id={{ManID}}" role="button">
+					<span class="glyphicon glyphicon-trash"></span>
+				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>